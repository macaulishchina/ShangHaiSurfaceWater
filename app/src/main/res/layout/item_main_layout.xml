<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/item_tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="浦东新区"
        android:textColor="@color/date_color" />

    <LinearLayout
        android:id="@+id/item_ll_mian"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        <!--在线-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rl_shape_online">

            <RelativeLayout
                android:id="@+id/item_rl_online"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rl_shape_onlines" />

        </RelativeLayout>
        <!--合格-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/rl_shape_hege">

            <RelativeLayout
                android:id="@+id/item_rl_hege"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rl_shape_heges" />
        </RelativeLayout>
        <!--捕获-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rl_shape_buhuo">

            <RelativeLayout
                android:id="@+id/item_rl_buhuo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rl_shape_buhuos" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:textSize="10dp"
            android:id="@+id/item_tv_online"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="ceshi"
            android:textColor="@color/date_color" />

        <TextView
            android:textSize="10dp"
            android:id="@+id/item_tv_hege"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="ceshi"
            android:textColor="@color/date_color" />

        <TextView
            android:textSize="10dp"
            android:id="@+id/item_tv_buhuo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="ceshi"
            android:textColor="@color/date_color" />

    </LinearLayout>

</LinearLayout>
