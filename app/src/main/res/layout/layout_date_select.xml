<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_time"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_date_arrowLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:src="@drawable/arrows_left"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/tv_date_startTime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="2013/12/08"
        android:textColor="@color/date_color" />

    <TextView
        android:id="@+id/tv_date_flag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:gravity="center"
        android:minHeight="30dp"
        android:minWidth="60dp"
        android:text="è‡³"
        android:textColor="@color/date_color" />

    <TextView
        android:id="@+id/tv_date_endTime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="2013/12/08"
        android:textColor="@color/date_color" />

    <ImageView
        android:id="@+id/iv_date_arrowRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:padding="10dp"
        android:src="@drawable/arrows_right"
        android:tint="@color/white" />

</LinearLayout>